<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Medium-like Home</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 font-sans">

  <%- include('./partials/navbar.ejs') %>

  <!-- Hero Section -->
  <section class="bg-white py-16 px-6 text-center max-w-4xl mx-auto">
    <h1 class="text-5xl font-extrabold mb-4 text-gray-900">Welcome to MediumClone</h1>
    <p class="text-lg text-gray-700 max-w-xl mx-auto mb-8">
      Discover stories, thinking, and expertise from writers on any topic.
    </p>
    <a href="/user/posts/all-posts" class="inline-block bg-green-600 text-white py-3 px-8 rounded-full text-lg font-semibold hover:bg-green-700 transition">
      Start Reading
    </a>
  </section>

  <!-- Content Section -->
  <main class="container mx-auto px-6 py-12 flex gap-10 max-w-6xl">

    <!-- Articles List -->
    <section class="flex-1 space-y-12">
      <% articles.forEach(article => { %>
        <article class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition">
          <h2 class="text-2xl font-bold text-gray-900 hover:text-green-600 cursor-pointer">
            <a href="/articles/<%= article.id %>"><%= article.title %></a>
          </h2>
          <div class="text-sm text-gray-500 mt-1 mb-3">
            By <span class="font-semibold"><%= article.author %></span> • <%= article.date %>
          </div>
          <p class="text-gray-700 mb-4">
            <%= article.snippet %>
          </p>
          <a href="/articles/<%= article.id %>" class="text-green-600 font-semibold hover:underline">
            Read more →
          </a>
        </article>
      <% }) %>
    </section>

    <!-- Sidebar -->
    <aside class="w-64 hidden lg:block">
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-xl font-bold mb-4">Popular Tags</h3>
        <div class="flex flex-wrap gap-2">
          <% popularTags.forEach(tag => { %>
            <a href="/tags/<%= tag %>" class="bg-green-100 text-green-700 px-3 py-1 rounded-full text-sm hover:bg-green-200">
              #<%= tag %>
            </a>
          <% }) %>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6 mt-8">
        <h3 class="text-xl font-bold mb-4">Recommended Authors</h3>
        <ul class="space-y-3">
          <% authors.forEach(author => { %>
            <li class="text-gray-700 hover:text-green-600 cursor-pointer">
              <a href="/authors/<%= author.id %>"><%= author.name %></a>
            </li>
          <% }) %>
        </ul>
      </div>
    </aside>

  </main>

  <footer class="bg-white border-t mt-20 py-6 text-center text-gray-600">
    &copy; 2025 MediumClone. All rights reserved.
  </footer>

</body>
</html>
