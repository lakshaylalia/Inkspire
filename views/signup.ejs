    />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Gt+Alpina:wght@300;400;500;600;700&display=swap">
  <style>
    .font-gt-alpina { font-family: 'Gt Alpina', serif; }
    
    .animate-fade-up {
      animation: fadeUp 0.5s ease-out;
    }
    
    @keyframes fadeUp {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .input-focus-within:focus-within {
      border-color: #1a8917;
    }
    
    .transition-smooth {
      transition: all 0.2s ease-in-out;
    }
  </style>
</head>
<body class="bg-white min-h-screen flex flex-col items-center justify-center px-4">
  <div class="w-full max-w-[440px] animate-fade-up">
    
    <div class="text-center mb-12">
      <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-black mb-4">
        <span class="text-white text-2xl font-bold">M</span>
      </div>
      <h1 class="text-[32px] font-gt-alpina font-bold text-gray-900 mb-2">Join Medium</h1>
      <p class="text-gray-500 text-lg">Enter your details to create an account.</p>
    </div>

    <form action="/register" method="POST" class="space-y-6">
      <div class="space-y-5">
        <div class="relative">
          <input 
            type="text" 
            name="name" 
            required 
            placeholder="Full name"
            class="w-full px-5 py-3.5 text-gray-900 bg-white border border-gray-200 rounded-full focus:outline-none focus:border-[#1a8917] focus:ring-1 focus:ring-[#1a8917] transition-smooth text-lg"
          />
        </div>

        <div class="relative">
          <input 
            type="text" 
            name="username" 
            required 
            placeholder="Username"
            class="w-full px-5 py-3.5 text-gray-900 bg-white border border-gray-200 rounded-full focus:outline-none focus:border-[#1a8917] focus:ring-1 focus:ring-[#1a8917] transition-smooth text-lg"
          />
        </div>

        <div class="relative">
          <input 
            type="email" 
            name="email" 
            required 
            placeholder="Email address"
            class="w-full px-5 py-3.5 text-gray-900 bg-white border border-gray-200 rounded-full focus:outline-none focus:border-[#1a8917] focus:ring-1 focus:ring-[#1a8917] transition-smooth text-lg"
          />
        </div>

        <div class="relative">
          <input 
            type="password" 
            name="password" 
            required 
            placeholder="Password"
            class="w-full px-5 py-3.5 text-gray-900 bg-white border border-gray-200 rounded-full focus:outline-none focus:border-[#1a8917] focus:ring-1 focus:ring-[#1a8917] transition-smooth text-lg"
          />
        </div>
      </div>

      <button 
        type="submit" 
        class="w-full bg-[#1a8917] hover:bg-[#156912] text-white text-lg font-medium py-3.5 px-6 rounded-full transition-smooth flex items-center justify-center group"
      >
        Create account
      </button>

